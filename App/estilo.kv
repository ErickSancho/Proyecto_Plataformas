<Menu>:
    FloatLayout:        
        Button:
            pos_hint:{"x":0.2, "y": 0.5}
            size_hint:0.25, 0.2
            text: "Persona"
            font_size: 20
            on_release:
                root.EntraPersona()
        
        Button:
            pos_hint:{"x":0.5, "y": 0.5}
            size_hint:0.25, 0.2
            text: "Empresa"
            font_size: 20
            on_release:
                root.EntraEmpresa()

<LoginPersona>:
    nameUser: usuario
    namePassword: contrasena

    

    GridLayout:
        cols:1
        padding: root.width*0.05, root.width*0.05, root.width*0.05, root.width*0.05


        GridLayout:
            cols:2

            Label:
                size:100,500
                text:"Usuario: "
                font_size:20
            
            TextInput:
                id:usuario
                multiline:False    
                size:100,500
            
            Label:
                text:"Contraseña: "
                size:100,500
                font_size:20
            
            TextInput:
                id:contrasena
                multiline:False
                size:100,500
                password: True
        Button:
            text: "Submit"
            pos_hint:{"root.x":0.5, "root.y": 0.5}
            size_hint:0.25, 0.2
            on_release: root.check_userpassword()
        Button:
            text: "Crear cuenta"
            pos_hint:{"root.x":0.5, "root.y": 0.5}
            size_hint:0.25, 0.2
            on_release: app.root.current = "crearpersona"


<CreateUserPersona>:
    nameAccount:nameAccount
    namePassword:namePassword
    againPassword:againPassword
    GridLayout:
        cols:1
        padding: root.width*0.05, root.width*0.05, root.width*0.05, root.width*0.05

        GridLayout:
            cols:2
            size: root.width, root.height
            Label:
                text: "Digite el nombre de usuario: "
                font_size: self.width*0.05
            
            TextInput:
                id: nameAccount
                multiline: False
                font_size: 20

            Label:
                text: "Digite la contraseña:"
                font_size: self.width*0.05
                    
            TextInput:
                id: namePassword
                multiline: False
                font_size: 20
                password: True
            
            Label:
                text: "Reingrese su contraseña:"
                font_size: self.width*0.05
                    
            TextInput:
                id: againPassword
                multiline: False
                font_size: 20
                password: True

        Button:
            text: "Crear cuenta"
            pos_hint:{"root.x":0.5, "root.y": 0.5}
            size_hint:0.25, 0.2
            on_release: root.createUser()
        Button:
            text: "Volver"
            pos_hint:{"root.x":0.5, "root.y": 0.5}
            size_hint:0.25, 0.2
            on_release: app.root.current = "loginpersona"

            

<CreateAccountPersona>:
    account: account
    GridLayout:
        cols:1
        padding: root.width*0.05, root.width*0.05, root.width*0.05, root.width*0.05
