<Menu>:
    FloatLayout:        
        Button:
            pos_hint:{"x":0.2, "center_y": 0.5}
            size_hint:0.25, 0.2
            text: "Persona"
            font_size: 20
            on_release:
                root.EntraPersona()
        
        Button:
            pos_hint:{"x":0.5, "center_y": 0.5}
            size_hint:0.25, 0.2
            text: "Empresa"
            font_size: 20
            on_release:
                root.EntraEmpresa()

<LoginPersona>:
    nameUser: usuario
    namePassword: contrasena

    GridLayout:
        cols:1
        padding: root.width*0.05, root.width*0.05, root.width*0.05, root.width*0.05


        GridLayout:
            cols:2
            padding:self.height*0.25
            spacing:self.height*0.25
            Label:
                size:100,500
                text:"Usuario: "
                font_size: self.height*0.85
            
            TextInput:
                id:usuario
                multiline:False    
                size:100,500
                
            
            Label:
                text:"Contraseña: "
                size:100,500
                font_size: self.height*0.85
            
            TextInput:
                id:contrasena
                multiline:False
                size:100,500
                password: True

        GridLayout:
            cols:2
            padding:self.height*0.25
            spacing:self.height*0.25
            
            Button:
                text: "Crear cuenta"
                font_size:self.height*0.2
                pos_hint:{"root.x":0.5, "root.y": 0.5}
                size_hint: 0.2, 0.15
                on_release: 
                    app.root.current = "crearpersona"
                    root.manager.transition.direction = "left"
            
            Button:
                text: "Submit"
                font_size:self.height*0.2
                pos_hint:{"root.x":0.5, "root.y": 0.5}
                size_hint:0.2, 0.15
                on_release: 
                    root.check_userpassword()
                    root.manager.transition.direction = "left"


<CreateUserPersona>:
    nameAccount:nameAccount
    namePassword:namePassword
    againPassword:againPassword
    GridLayout:
        cols:1
        padding: root.width*0.05, root.width*0.05, root.width*0.05, root.width*0.05

        GridLayout:
            cols:2
            size: root.width, root.height
            padding:self.height*0.045
            spacing:self.height*0.25
            Label:
                text: "Digite el nombre de usuario: "
                font_size: self.height*0.65
            
            TextInput:
                id: nameAccount
                multiline: False
                font_size: 20

            Label:
                text: "Digite la contraseña:"
                font_size: self.height*0.65
                    
            TextInput:
                id: namePassword
                multiline: False
                font_size: 20
                password: True
            
            Label:
                text: "Reingrese su contraseña:"
                font_size: self.height*0.65
                    
            TextInput:
                id: againPassword
                multiline: False
                font_size: 20
                password: True
        GridLayout:
            cols:2
            padding:self.height*0.25
            spacing:self.height*0.25
            Button:
                text: "Crear cuenta"
                font_size:self.height*0.2
                pos_hint:{"root.x":0.5, "root.y": 0.5}
                size_hint:0.25, 0.2
                on_release: root.createUser()
            Button:
                text: "Volver"
                font_size:self.height*0.2
                pos_hint:{"root.x":0.5, "root.y": 0.5}
                size_hint:0.25, 0.2
                on_release: 
                    app.root.current = "loginpersona"
                    root.manager.transition.direction = "right"



<CreateAccountPersona>:
    account: account
    
    GridLayout:
        cols:1
        padding: root.width*0.15, root.height*0.05, root.width*0.15, root.height*0.05
        GridLayout:
            cols:1
            padding: root.width*0.05, root.height*0.25, root.width*0.05, root.height*0.25
            spacing: self.width*0.01, self.height*0.01

            
                
            GridLayout:
                cols:1
                # padding: self.width*0.05, self.height*0.01, self.width*0.05, self.height*0.01
                Label:
                    text: "Digite el nombre de la cuenta bancaria a crear:"
                    font_size: self.width*0.055
                
            GridLayout:
                cols:1
                # padding: self.width*0.05, self.height*0.05, self.width*0.25, self.height*0.05
                TextInput:
                    halign: "center"
                    id: account
                    multiline: True
                    font_size: (root.height+root.width) * 0.015
                    
        
        Button:
            text: "Crear cuenta bancaria"
            pos_hint:{"root.x":0.5, "root.y": 0.5}
            size_hint:0.25, 0.2
            on_release: root.createAccount()

        Button:
            text: "Volver"
            pos_hint:{"root.x":0.5, "root.y": 0.5}
            size_hint:0.25, 0.2
            on_release:
                app.root.current = "menupersona"
                root.manager.transition.direction = "right"


